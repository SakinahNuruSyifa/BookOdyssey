<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Hi, we're BookOdyssey"
                    android:textStyle="bold"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="BookOdyssey is dedicated to novel lovers who want to dive into the sea of words and explore new worlds through various genres of captivating novels."
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/ufo"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/signin_main"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:backgroundTint="#F4DFC8"
                android:layout_marginEnd="45dp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/signup_main"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:backgroundTint="#F4DFC8"
                android:textColor="@color/black" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>